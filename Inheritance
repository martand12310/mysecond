import java.util.*;
class Student
{
    int rollno;
    String name;
    void student_info()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enetr the student Roll No please");
        rollno=sc.nextInt();
        System.out.println("enter student name please");
        name=sc.next();
    }
        void student_display()
    {
        System.out.println("rollno is: " + rollno);
        System.out.println("name is: " + name);
    }
}
class Exam extends Student
{
    int english,java,python;
    void exam_info()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the english marks please");
        english=sc.nextInt();
        System.out.println("enter the java marks please");
        java=sc.nextInt();
        System.out.println("enter the python marks please");
        python=sc.nextInt();
    }
    void exam_display()
    {
        System.out.println("Your English marks is:" +english);
        System.out.println("Your JAV marks is:" +java);
        System.out.println("Your Python marks is:" +python);
    }
}
class Sport extends Student
{
    int sport_marks;
    void sport_info()
    {
            sport_marks=100;
    }
        void sport_display()
    {
        System.out.println("Your Sport marks is:" +sport_marks);
    }
}
class Hirarchical
{
    public static void main(String args[])
    {
        Exam e4=new Exam();
        System.out.println("*****STUDENT EXAM DETAILS*****");
        e4.student_info();
        e4.exam_info();
        e4.student_display();
        e4.exam_display();
        Sport s4=new Sport();
        System.out.println("*****STUDENT SPORT DETAILS*****");
        s4.student_info();
        s4.sport_info();
        s4.student_display();
        s4.sport_display();
    }
}
